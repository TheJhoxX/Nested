    <servlet>
        <servlet-name>servletNests</servlet-name>
        <servlet-class>nested.controlador.publicarNestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterUserServlet</servlet-name>
        <servlet-class>nested.controlador.RegisterUserServlet</servlet-class>
