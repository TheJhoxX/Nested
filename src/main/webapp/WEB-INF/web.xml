    <servlet>
        <servlet-name>SocialServlet</servlet-name>
        <servlet-class>nested.controlador.SocialServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnviaSolicitudServlet</servlet-name>
        <servlet-class>nested.controlador.EnviaSolicitudServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValorarNestServlet</servlet-name>
        <servlet-class>nested.controlador.ValorarNestServlet</servlet-class>
